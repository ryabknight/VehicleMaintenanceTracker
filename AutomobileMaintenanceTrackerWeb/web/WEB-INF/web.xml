<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>GetVehiclesServlet</servlet-name>
        <servlet-class>servlets.GetVehiclesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddVehicleServlet</servlet-name>
        <servlet-class>servlets.AddVehicleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewVehicleServlet</servlet-name>
        <servlet-class>servlets.ViewVehicleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteMaintenanceItemServlet</servlet-name>
        <servlet-class>servlets.DeleteMaintenanceItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddMaintenanceItemServlet</servlet-name>
        <servlet-class>servlets.AddMaintenanceItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateVehicleServlet</servlet-name>
        <servlet-class>servlets.UpdateVehicleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteVehicleServlet</servlet-name>
        <servlet-class>servlets.DeleteVehicleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetVehiclesServlet</servlet-name>
        <url-pattern>/getVehicles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddVehicleServlet</servlet-name>
        <url-pattern>/addVehicle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewVehicleServlet</servlet-name>
        <url-pattern>/viewVehicle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteMaintenanceItemServlet</servlet-name>
        <url-pattern>/deleteMaintenanceItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMaintenanceItemServlet</servlet-name>
        <url-pattern>/addMaintenanceItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateVehicleServlet</servlet-name>
        <url-pattern>/updateVehicle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteVehicleServlet</servlet-name>
        <url-pattern>/deleteVehicle</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/WEB-INF/index.html</welcome-file>
    </welcome-file-list>
</web-app>